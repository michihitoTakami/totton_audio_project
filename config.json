{
  "alsaDevice": "hw:AUDIO",
  "output": {
    "mode": "usb",
    "options": {
      "usb": {
        "preferredDevice": "hw:AUDIO"
      }
    }
  },
  "bufferSize": 262144,
  "periodSize": 32768,
  "upsampleRatio": 16,
  "blockSize": 4096,
  "gain": 0.285,
  "headroomTarget": 0.92,
  "phaseType": "minimum",
  "filterPath": "data/coefficients/filter_44k_16x_2m_linear_phase.bin",
  "filterPath44kMin": "data/coefficients/filter_44k_16x_2m_linear_phase.bin",
  "filterPath48kMin": "data/coefficients/filter_48k_16x_2m_linear_phase.bin",
  "filterPath44kLinear": "data/coefficients/filter_44k_16x_2m_linear_phase.bin",
  "filterPath48kLinear": "data/coefficients/filter_48k_16x_2m_linear_phase.bin",
  "_comment": "Filter paths: system preloads 44kHz/48kHz filters for both minimum and linear phase at startup.",
  "eqEnabled": true,
  "eqProfilePath": "data/EQ/Sample_EQ.txt",
  "partitionedConvolution": {
    "enabled": true,
    "fastPartitionTaps": 32768,
    "minPartitionTaps": 32768,
    "maxPartitions": 4,
    "tailFftMultiple": 2
  },
  "crossfeed": {
    "enabled": false,
    "headSize": "m",
    "hrtfPath": "data/crossfeed/hrtf/"
  },
  "fallback": {
    "enabled": true,
    "gpuThreshold": 80.0,
    "gpuThresholdCount": 3,
    "gpuRecoveryThreshold": 70.0,
    "gpuRecoveryCount": 5,
    "xrunTriggersFallback": true,
    "monitorIntervalMs": 100
  },
  "logging": {
    "level": "info",
    "filePath": "/var/log/gpu_upsampler/daemon.log",
    "maxFileSize": 10485760,
    "maxBackups": 5,
    "consoleOutput": true,
    "coloredOutput": true
  },
  "rtp": {
    "enabled": false,
    "autoStart": false,
    "_comment": "RTP入力は削除予定。入力レート/フォーマットはTCP経由でのヘッダ検出に委ねます。"
  },
  "statsFilePath": "/tmp/gpu_upsampler_stats.json"
}
